---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog')).sort(
  (a, b) => b.data.date.valueOf() - a.data.date.valueOf()
);

function formatDate(date: Date) {
  return date.toLocaleDateString('ja-JP', {
    year: 'numeric',
    month: 'short',
    day: 'numeric',
  });
}

function getPostUrl(id: string, date: Date) {
  const year = date.getFullYear();
  const month = String(date.getMonth() + 1).padStart(2, '0');
  const day = String(date.getDate()).padStart(2, '0');
  // Remove date prefix from filename to get slug
  const slug = id.replace(/^\d{4}-\d{2}-\d{2}-/, '');
  return `/${year}/${month}/${day}/${slug}/`;
}
---

<BaseLayout title="Home">
  <h1 class="text-3xl font-normal mb-6">Posts</h1>
  <ul class="list-none p-0 m-0">
    {posts.map((post) => (
      <li class="mb-8">
        <span class="text-sm text-gray-500">{formatDate(post.data.date)}</span>
        <h2 class="mt-1">
          <a class="text-2xl font-normal text-blue-600 no-underline hover:underline" href={getPostUrl(post.id, post.data.date)}>
            {post.data.title}
          </a>
        </h2>
      </li>
    ))}
  </ul>
</BaseLayout>
