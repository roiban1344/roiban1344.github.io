---
interface Heading {
  depth: number;
  slug: string;
  text: string;
}

interface Props {
  headings: Heading[];
}

const { headings } = Astro.props;

// h2, h3のみを対象とする
const filteredHeadings = headings.filter((h) => h.depth >= 2 && h.depth <= 3);
---

{filteredHeadings.length > 0 && (
  <nav class="border-l-4 border-gray-200 pl-4 mb-8">
    <p class="text-sm text-gray-500 m-0 mb-2">目次</p>
    <ul class="list-none m-0 p-0">
      {filteredHeadings.map((heading) => (
        <li class:list={['leading-relaxed', { 'pl-4': heading.depth === 3 }]}>
          <a
            href={`#${heading.slug}`}
            class="text-blue-600 no-underline text-sm hover:underline"
          >
            {heading.text}
          </a>
        </li>
      ))}
    </ul>
  </nav>
)}


