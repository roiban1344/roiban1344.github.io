---
interface Props {
  title: string;
  description?: string;
}

const { title, description = "roiban1344の作業記録" } = Astro.props;
const siteTitle = "Roiban1344's Logbook";
---

<!doctype html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="alternate" type="application/rss+xml" title={siteTitle} href="/rss.xml" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/katex@0.16/dist/katex.min.css" />
    <title>{title} | {siteTitle}</title>
  </head>
  <body class="min-h-screen flex flex-col bg-[#fdfdfd] text-gray-900">
    <header class="border-t-[5px] border-t-gray-700 border-b border-b-gray-200 py-2.5">
      <div class="max-w-3xl mx-auto px-8 flex flex-col sm:flex-row sm:justify-between sm:items-center gap-2">
        <a class="text-2xl font-light tracking-tight text-gray-700 hover:no-underline" href="/">
          {siteTitle}
        </a>
        <nav class="flex gap-5">
          <a href="/" class="text-gray-900 hover:underline">Home</a>
          <a href="/about/" class="text-gray-900 hover:underline">About</a>
        </nav>
      </div>
    </header>

    <main class="flex-1 py-8">
      <div class="max-w-3xl mx-auto px-8">
        <slot />
      </div>
    </main>

    <footer class="border-t border-gray-200 py-8 text-gray-500 text-sm">
      <div class="max-w-3xl mx-auto px-8 flex flex-col sm:flex-row sm:justify-between gap-2">
        <p>&copy; {new Date().getFullYear()} roiban1344. Powered by <a href="https://astro.build" class="text-blue-600 hover:underline">Astro</a>.</p>
        <p>
          <a href="https://github.com/roiban1344" class="text-blue-600 hover:underline">GitHub</a>
        </p>
      </div>
    </footer>
  </body>
</html>

<style is:global>
  /* KaTeX の横スクロール対応のみ */
  .katex-display {
    overflow-x: auto;
    overflow-y: hidden;
  }

  /* Zenn スタイルのコードブロック with ファイル名 */
  .code-block-wrapper {
    margin: 1.5rem 0;
  }

  .code-title {
    display: inline-block;
    background-color: #1e293b;
    color: #e2e8f0;
    padding: 0.375rem 0.75rem;
    font-size: 0.75rem;
    font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, 'Liberation Mono', 'Courier New', monospace;
    border-radius: 0.375rem 0.375rem 0 0;
    border-bottom: none;
  }

  .code-block-wrapper pre {
    margin-top: 0 !important;
    border-top-left-radius: 0 !important;
  }
</style>
