{
  "name": "Astro Blog",
  "image": "mcr.microsoft.com/devcontainers/javascript-node:22",
  "updateRemoteUserUID": true,
  "postCreateCommand": "npm install",
  "forwardPorts": [4321],
  "customizations": {
    "vscode": {
      "extensions": [
        "astro-build.astro-vscode",
        "esbenp.prettier-vscode"
      ],
      "settings": {
        "editor.formatOnSave": true
      }
    }
  }
}

